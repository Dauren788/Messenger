<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <LinearLayout
        android:id="@+id/date_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:background="@drawable/chat_bubble_date"
        >

        <TextView
            android:text="16 November"
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_left_msg_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="7dp"
        android:background="@drawable/chat_bubble_left">

        <TextView
            android:maxWidth="200dp"
            android:id="@+id/chat_left_msg_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:text="default asd asd asd asd asd  asd asd as da sdasd a sdas "/>

        <TextView
            android:id="@+id/chat_left_msg_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ACACAC"
            android:layout_gravity="bottom"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="2dp"
            android:text="20:20"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_right_msg_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="7dp"
        android:background="@drawable/chat_bubble_right">

        <TextView
            android:maxWidth="200dp"
            android:id="@+id/chat_right_msg_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="18dp"
            android:text="default asd as das da das dd aas das das dad "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/chat_right_msg_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ACACAC"
            android:layout_gravity="bottom"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="2dp"
            android:text="20:20"/>

    </LinearLayout>

</LinearLayout>